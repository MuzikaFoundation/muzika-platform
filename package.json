{
  "name": "muzika-core",
  "version": "0.0.0",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm run start:wallet",
    "start:wallet": "ng serve -o --project muzika-wallet --hmr --ssl --ssl-key ssl/server.key --ssl-cert ssl/server.crt",
    "sw": "npm run start:wallet ",
    "start:wallet:stage": "npm run start:wallet -- -c stage",
    "start:wallet:prod": "npm run start:wallet -- -c production",
    "start:prototype": "ng serve -o --project muzika-prototype --hmr --ssl --ssl-key ssl/server.key --ssl-cert ssl/server.crt",
    "start:viewer": "npm-run-all -p serve:viewer electron:serve",
    "serve:viewer": "ng serve --project muzika-ipfs-viewer -o",
    "sp": "npm run start:prototype -o",
    "start:prototype:stage": "npm run start:prototype -- -c stage",
    "start:prototype:prod": "npm run start:prototype -- -c production",
    "build:core": "ng build --project muzika-core",
    "build:wallet": "ng build --project muzika-wallet",
    "build:wallet:stage": "npm run build:wallet -- -c stage",
    "build:wallet:prod": "npm run build:wallet -- -c production",
    "build:prototype": "ng build --project muzika-prototype",
    "build:prototype:stage": "npm run build:prototype -- -c stage",
    "build:prototype:prod": "npm run build:prototype -- -c production",
    "build:viewer": "npm run electron:tsc && ng build --project muzika-ipfs-viewer",
    "build:viewer:stage": "npm run build:viewer -- -c stage",
    "build:viewer:prod": "npm run build:viewer -- -c production",
    "electron:tsc": "tsc main.ts --allowJs --lib es5,dom,es2016,es2015",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build:viewer:prod && electron .",
    "electron:linux": "npm run build:viewer:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:viewer:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:viewer:prod && npx electron-builder build --mac",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "contract:compile": "cd muzika-contract/ && truffle compile",
    "contract:interface": "ts-node ./utils/TypeChain/lib/cli.ts -p typechain.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.2",
    "@angular/cdk": "^6.0.2",
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/http": "^6.0.2",
    "@angular/material": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "@angularclass/hmr": "^2.1.3",
    "@ledgerhq/hw-transport-u2f": "^4.12.0",
    "@ledgerhq/web3-subprovider": "^4.12.0",
    "@ngx-translate/core": "^10.0.1",
    "@ngx-translate/http-loader": "^3.0.1",
    "alertify.js": "^1.0.12",
    "bignumber.js": "^5.0.0",
    "bn.js": "^4.11.8",
    "bootstrap": "^4.1.1",
    "buffer": "^5.1.0",
    "core-js": "^2.5.6",
    "eth-sig-util": "^1.4.2",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.2.0",
    "ethereumjs-wallet": "^0.6.0",
    "ethereumjs-wallet-browser": "^0.6.0",
    "fs-extra": "^5.0.0",
    "ipfs": "^0.28.2",
    "jquery": "^3.3.1",
    "ngx-bootstrap": "^2.0.5",
    "popper.js": "^1.14.3",
    "rxjs": "^6.1.0",
    "safe-buffer": "^5.1.2",
    "stream-browserify": "^2.0.1",
    "truffle-contract": "^3.0.5",
    "truffle-hdwallet-provider": "0.0.3",
    "vm-browserify": "^1.0.1",
    "web3": "^0.20.6",
    "web3-provider-engine": "^14.0.5",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@0xproject/types": "^0.6.1",
    "@0xproject/typescript-typings": "^0.3.1",
    "@angular-devkit/build-angular": "^0.6.3",
    "@angular-devkit/build-ng-packagr": "^0.6.3",
    "@angular/cli": "^6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@types/jasmine": "^2.8.7",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "~8.9.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "browserify": "^16.2.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "codelyzer": "^4.3.0",
    "command-line-args": "^5.0.2",
    "electron": "2.0.1",
    "electron-builder": "20.13.4",
    "electron-reload": "1.2.2",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.3",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.4.5",
    "npm-run-all": "^4.1.3",
    "npx": "10.2.0",
    "prettier": "^1.12.1",
    "protractor": "^5.3.2",
    "solium": "git+https://github.com/duaraghav8/Solium.git#develop",
    "truffle": "^4.1.8",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "2.7.2",
    "wait-on": "^2.1.0",
    "webpack-cli": "^2.1.3"
  }
}
