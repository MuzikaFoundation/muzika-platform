{
  "name": "muzika-platform",
  "version": "0.0.4",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run start:wallet",
    "start:wallet": "ng serve muzika-wallet -o --hmr --ssl --ssl-key ssl/server.key --ssl-cert ssl/server.crt",
    "sw": "npm run start:wallet ",
    "start:wallet:stage": "npm run start:wallet -- -c stage",
    "start:wallet:prod": "npm run start:wallet -- -c production",
    "start:prototype": "ng serve muzika-prototype -o --hmr --ssl --ssl-key ssl/server.key --ssl-cert ssl/server.crt",
    "start:viewer": "cross-env ENV=dev node hooks/set_environments.js && npm-run-all -p serve:viewer electron:serve",
    "start:viewer:stage": "cross-env ENV=stage node hooks/set_environments.js && npm-run-all -p serve:viewer:stage electron:serve",
    "serve:viewer": "ng serve muzika-ipfs-viewer --hmr",
    "serve:viewer:stage": "npm run serve:viewer -- -c stage",
    "sp": "npm run start:prototype -o",
    "start:prototype:stage": "npm run start:prototype -- -c stage",
    "start:prototype:prod": "npm run start:prototype -- -c production",
    "build:core": "ng build muzika-core",
    "build:wallet": "ng build muzika-wallet",
    "build:wallet:stage": "npm run build:wallet -- -c stage",
    "build:wallet:prod": "npm run build:wallet -- -c production",
    "build:prototype": "ng build muzika-prototype",
    "build:prototype:stage": "npm run build:prototype -- -c stage",
    "build:prototype:prod": "npm run build:prototype -- -c production",
    "build:viewer": "npm run electron:tsc && ng build muzika-ipfs-viewer",
    "build:viewer:stage": "npm run build:viewer -- -c stage",
    "build:viewer:prod": "npm run build:viewer -- -c production",
    "electron:tsc": "tsc main.ts --allowJs --lib es5,dom,es2016,es2015",
    "electron:ready": "npx electron-builder install-app-deps",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "preelectron:dev": "cross-env ENV=dev node set_environments.js",
    "electron:dev": "npm run build:viewer && electron .",
    "preelectron:linux": "cross-env ENV=stage node set_environments.js",
    "electron:linux": "npm run build:viewer:prod && npx electron-builder build --linux",
    "preelectron:windows": "cross-env ENV=stage node set_environments.js",
    "electron:windows": "npm run build:viewer:stage && npx electron-builder build --windows",
    "preelectron:mac": "cross-env ENV=stage node set_environments.js",
    "electron:mac": "npm run build:viewer:stage && npx electron-builder build --mac",
    "publish:core": "npm run build:core && npm publish dist/muzika-core/ --access=public",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "contract:compile": "cd muzika-contract/ && truffle compile",
    "contract:interface": "ts-node --project tsconfig.typechain.json ./utils/TypeChain/lib/cli.ts -p typechain.json"
  },
