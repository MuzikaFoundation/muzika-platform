  "description": "Decentralized Music platform",
  "scripts": {
    "ng": "ng",
    "start": "pm2 start ecosystem.config.js --env production && pm2 logs",
    "start:stage": "pm2 start ecosystem.config.js && pm2 logs",
    "start:web": "ng serve muzika-web -o --hmr --port 4300 --ssl --ssl-key ssl/server.key --ssl-cert ssl/server.crt",
    "start:web:stage": "npm run start:web -- -c stage",
    "start:web:prod": "npm run start:web -- -c production",
    "sw": "npm run start:web",
    "sws": "npm run start:web:stage",
    "build:core": "ng build muzika-core",
    "build:web": "ng build muzika-web",
    "build:web:stage": "npm run build:web -- -c stage",
    "build:web:prod": "npm run build:web -- -c production",
    "build:intro": "npm run build:intro:client && npm run build:intro:server && npm run build:intro:webpack",
    "build:intro:client": "ng build muzika-intro -c production",
    "build:intro:server": "ng build muzika-intro-server -c production",
    "build:intro:webpack": "webpack --config ./config/webpack.config.js --mode production",
    "serve:intro:server": "ENV=local node --experimental-modules dist/intro/server",
    "publish:core": "npm run build:core && npm publish dist/muzika-core/ --access=public",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "contract:compile": "cd muzika-contract/ && npm run contract:compile && npm run contract:import",
    "contract:interface": "ts-node --project tsconfig.typechain.json ./utils/TypeChain/lib/cli.ts -p typechain.json"
  },
